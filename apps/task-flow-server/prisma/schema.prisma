datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id          String            @id @default(cuid())
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  title       String?
  description String?
  status      EnumTaskStatus?
  priority    EnumTaskPriority?
  assignee    String?
  project     Project?          @relation(fields: [projectId], references: [id])
  projectId   String?
}

model Project {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  startDate   DateTime?
  endDate     DateTime?
  name        String?
  description String?
  owner       String?
  tasks       Task[]
  chats       Chat[]
}

model Chat {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  message   String?
  sender    String?
  timestamp DateTime?
  project   Project?  @relation(fields: [projectId], references: [id])
  projectId String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumTaskStatus {
  Option1
}

enum EnumTaskPriority {
  Option1
}
